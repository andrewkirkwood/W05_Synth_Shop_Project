<h2>EDIT: <%= @product.name %></h2>

<form action="/products/<%= @product.id %>/update" method="post">
  <label for="name">Name:</label>
  <input type="text" name="name" value="<%= @product.name %>"> <br>

  <label for="description">Description:</label>
  <input type="text" name="description" value="<%= @product.description %>"><br>

  <label for="buy_cost">Buy cost:</label>
  <input type="number" name="buy_cost" value="<%= @product.buy_cost %>"><br>

  <label for="sell_price">Sell price:</label>
  <input type="number" name="sell_price" value="<%= @product.sell_price %>"><br>

  <label for="stock_qty">Stock quantity:</label>
  <input type="number" name="stock_qty" value="<%= @product.stock_qty %>"><br>

  <label for="sales_qty">Sales quantity:</label>
  <input type="number" name="sales_qty" value="<%= @product.sales_qty %>"><br>

  <label for="manufacturer_id">Manufacturer:</label>
  <select name='manufacturer_id' id="manufacturer_id">
    <% @manufacturers.each do |manufacturer| %>
    <option value="<%= manufacturer.id %>"><%= manufacturer.name %></option>
    <% end %>
  </select><br>



  <label for='type'>Type:
    <select name='type' id='type'>
      <% @types.each do |type| %>
      <option value="<%= type %>"> <%= type %> </option>
      <% end %>
    </select><br>
  </label>



  <input type="submit" value="update">
</form>

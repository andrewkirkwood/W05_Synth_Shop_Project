<h1>New product</h1>

<form action="/products" method="post">
  <label for='name'>Product name:</label>
  <input type='text' name='name' id='name'></input><br>

  <label for='description'> Description:</label>
  <input type='text' name='description' id='description'></input><br>

  <label for='buy_cost'>Buy cost:</label>
  <input type='text' name='buy_cost' id='buy_cost'></input><br>

  <label for='sell_price'>Sell price:</label>
  <input type='text' name='sell_price' id='sell_price'></input><br>

  <label for='stock_qty'>Stock quantity:</label>
  <input type='text' name='stock_qty' id='stock_qty'></input><br>

  <label for='sales_qty'>Sales quantity:</label>
  <input type='text' name='sales_qty' id='sales_qty'></input><br>

  <label>Manufacturer:
    <select name='manufacturer_id' id='manufacturer_id'>
      <% @manufacturers.each do |manufacturer| %>
      <option value="<%= manufacturer.id %>"><%= manufacturer.name %></option>
      <% end %>

    </select><br>
  </label>

  <input class="btn btn--action" type='submit' value="Add!" id='name'>
</form>
